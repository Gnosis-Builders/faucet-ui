{
  "root": true,
  "extends": [
      "next/core-web-vitals",
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "project": [
          "./tsconfig.json"
      ]
  },
  "plugins": [
      "@typescript-eslint"
  ],
  "rules": {
      "no-console": "error",
      "@typescript-eslint/strict-boolean-expressions": [
          2,
          {
              "allowString": false,
              "allowNumber": false
          }
      ]
  },
  "ignorePatterns": [
      "src/**/*.test.ts",
      "src/fonts",
      "src/frontend/generated/*",
      "dist/*",
      "build/*"
  ]
}