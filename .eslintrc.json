{
    "root": true,
    "extends": [
        "next/core-web-vitals",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "project": [
            "./tsconfig.json"
        ]
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "react/display-name": "off",
        "no-console": "error",
        "@typescript-eslint/strict-boolean-expressions": [
            2,
            {
                "allowString": false,
                "allowNumber": false
            }
        ]
    },
    "ignorePatterns": [
        "pages/**/*.test.ts",
        "pages/fonts",
        "pages/frontend/generated/*",
        "dist/*",
        "build/*"
    ]
}